<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/md_keylines"
    android:layout_marginLeft="@dimen/md_keylines"
    android:layout_marginRight="@dimen/md_keylines"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_image_gut"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/card_image_height"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:foreground="@drawable/gradient_shape"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_alignBottom="@id/card_image_gut"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="0dp"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/deal_title"
                    android:padding="0dp"
                    style="@style/DealsHeaderText"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="deal_title" />

                <TextView
                    android:id="@+id/gut_price"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/deal_title"
                    android:paddingRight="10dp"
                    android:text="220."
                    style="@style/DealsPriceText" />

                </RelativeLayout>

                <RelativeLayout
                    android:padding="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:padding="0dp"
                    android:id="@+id/deal_description"
                    style="@style/DealsDescText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="deal_description"
                    android:gravity="bottom"/>

                    <LinearLayout
                        android:padding="0dp"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignEnd="@id/deal_description"
                        android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/action_button"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="0dp"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:tint="@color/colorLightWhite"
                        android:src="@drawable/ic_redeem_black_24dp"
                        />

                    <TextView
                        android:padding="0dp"
                        android:id="@+id/mit_text"
                        style="@style/MitmachenText"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Mitmachen" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
