    <style name="RegionalTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="tabTextColor">@color/colorLightGrey</item>
        <item name="tabBackground">@color/colorWhite</item>
    </style>

    <style name="NotificationHeaderText">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
