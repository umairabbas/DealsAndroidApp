    <style name="ShopsHeaderText">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">1.2</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="ShopsDescText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">1.2</item>
        <item name="android:textColor">@color/colorLightGrey</item>
    </style>

    <style name="DealsHeaderText">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">1.2</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="DealsToolbarHeaderText">
        <item name="android:textSize">@dimen/_32sdp</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="DealsDescText">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">1.2</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="DealsPriceText">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:shadowColor">@color/colorGrey</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="DealsOldPriceText">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:shadowColor">@color/colorGrey</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">@color/red</item>
    </style>



